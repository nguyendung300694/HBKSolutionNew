                <li class="nav-item @Html.isNavMenuActive("Index","Contact")">
                    <a class="nav-link" href="@Url.Action("Index","Contact")">Liên hệ</a>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item @Html.isNavMenuActive("Index","Management")">
                        <a class="nav-link" href="@Url.Action("Index","Management")">Trang quản lý</a>
